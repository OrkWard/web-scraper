{
  "name": "trpc-server",
  "version": "1.0.2",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "config": "op inject --in-file .example.env --out-file .env -f",
    "build-watch": "bunchee --watch",
    "start-watch": "node --env-file=.env --watch ./dist/index.js",
    "dev": "conc 'pnpm:build-watch' 'pnpm:start-watch'",
    "build": "tsc && bunchee",
    "start": "NODE_ENV=production node --env-file=.env ./dist/index.js"
  },
  "devDependencies": {
    "@types/node": "catalog:"
  },
  "dependencies": {
    "@sentry/node": "^9.15.0",
    "@trpc/server": "^11.1.2",
    "googleapis": "^148.0.0",
    "html-entities": "^2.6.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.0.0",
    "twitter-scraper": "workspace:*",
    "zod": "^3.24.3"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts"
}
